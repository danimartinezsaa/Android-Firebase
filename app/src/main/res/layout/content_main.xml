<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/incafeleche"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="30dp"/>
    <EditText
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/incafesololargo" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/incafeleche"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"/>
    <EditText
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/incroissant" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/incafesololargo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"/>
    <EditText
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/intostada" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/incroissant"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"/>
    <TextView
            android:text="Café con leche"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/txtCafeLeche" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/incafeleche"/>
    <TextView
            android:text="Café Sólo Largo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCafeSoloLargo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/incafesololargo"/>
    <TextView
            android:text="Croissants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCroissants"
            app:layout_constraintTop_toTopOf="@+id/incroissant" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Tostada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTostada" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@+id/intostada" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/intortilla" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/intostada" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Tortilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTortilla" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/intortilla"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="401dp" android:id="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="400dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nombre"
            android:ems="10"
            android:id="@+id/innombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"/>
    <CheckBox
            android:text="Confirmado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkConfirmado"
            android:layout_marginTop="25dp" app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:clickable="false" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="525dp" android:id="@+id/guideline2"/>


</android.support.constraint.ConstraintLayout>